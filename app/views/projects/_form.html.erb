<%= simple_form_for(@project, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

 
    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :organisation, required: true, label: false, placeholder: "Organisation", input_html: {class: "form-control"} %>
  

    <%= f.input :budget, required: true, label: false, placeholder: "Budget", input_html: {class: "form-control"} %>
    <%= f.input :duration, required: true, label: false, placeholder: "Duration", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Project description", input_html: {class: "form-control", row: 7} %>
    
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
  
<% end %>
