<div class="row">
<h1 class="text-center">Dashboard</h1>
  <div class="col-md-8">
    <h3 class="text-center">
     <%= link_to "+ New Project", new_project_path, class: "btn btn-danger btn-lg"  %>
    </h3>
    <table class="table table-striped table-bordered">
          <tr>
            <th class="center">Project Name</th>
            <th class="center">Duration</th>
            <th class="center">Budget</th> 
            <th class="center">Organisation</th> 
            <th class="center">Project Created</th>
            <th class="center">Actions</th>
          </tr>
       
        
          <% @projects.each do |project| %> 
          <tr>
            <td class="center"><%= link_to project.name, project_path(project) %></td>
            <td class="center"><%= project.duration %></td>
            <td class="center"><%= project.budget %></td>
            <td class="center"><%= project.organisation %></td>
            <td class="center"><%= project.created_at.strftime("%B %-d, %Y") %></td>
            <td class="center"><%= link_to "Edit", edit_project_path(project) %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>
